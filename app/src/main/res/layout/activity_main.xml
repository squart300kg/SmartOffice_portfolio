<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="bottom|center"
                android:paddingTop="60dp"
                android:text="Team Nova"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="50dp"
                android:text="Start Office"
                android:textSize="30dp"
                android:textStyle="bold" />

            <!-- 방범 카메라 제목-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_video_cam" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="30dp"
                    android:text="방범 카메라"
                    android:textSize="25dp" />

                <TextView
                    android:id="@+id/button_media"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/item_content_area"
                    android:gravity="center"
                    android:padding="4dp"
                    android:text="다시보기"
                    android:textColor="#000000"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/button_camera"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/item_content_area"
                    android:gravity="center"
                    android:padding="4dp"
                    android:text="카메라 접속"
                    android:textColor="#000000"
                    android:textSize="18dp" />

            </LinearLayout>

            <!-- 습도 제목-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:paddingHorizontal="7dp"
                    android:src="@drawable/water" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="30dp"
                    android:text="사무실 내부 온습도"
                    android:textSize="25dp" />

                <ImageView
                    android:id="@+id/button_refresh_humidity"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_refresh" />

            </LinearLayout>

            <!--사무실 온습도-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:background="@drawable/item_content_area"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginTop="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginBottom="20dp"
                            android:gravity="center"
                            android:paddingHorizontal="15dp"
                            android:paddingLeft="50dp"
                            android:text="습도 (%)"
                            android:textSize="18dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginTop="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginBottom="20dp"
                            android:gravity="center"
                            android:paddingHorizontal="15dp"
                            android:paddingLeft="50dp"
                            android:text="온도 (*C)"
                            android:textSize="18dp" />


                    </LinearLayout>

                    <!--1사무실-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_humidity"
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:paddingLeft="35dp"
                            android:text="20"
                            android:textColor="#000000"
                            android:textSize="25dp" />

                        <TextView
                            android:id="@+id/tv_temperature"
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:paddingLeft="60dp"
                            android:text="20.5"
                            android:textColor="#000000"
                            android:textSize="25dp" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!--수동 / 자동 제어 버튼-->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:gravity="center"
                            android:layout_marginHorizontal="2dp"
                            android:text="자동 제어"
                            android:textSize="15dp"
                            android:textColor="#828282"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <!--스위치 시작-->
                        <LinearLayout
                            android:id="@+id/auto_button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginBottom="20dp"
                            android:orientation="horizontal">


                            <TextView
                                android:id="@+id/auto_on"
                                android:textAlignment="center"
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                android:background="@drawable/item_switch_theme"
                                android:padding="5dp"
                                android:text="O N"
                                android:textColor="#000000"
                                android:textSize="15dp" />

                            <TextView
                                android:id="@+id/auto_off"
                                android:textAlignment="center"
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                android:background="#000000"
                                android:padding="5dp"
                                android:text="OFF"
                                android:textColor="#ffffff"
                                android:textSize="15dp" />

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/manual"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <!--음성제어 버튼-->
                        <LinearLayout
                            android:id="@+id/mic_button_fan_and_humidity"
                            android:background="@drawable/item_content_area"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="15dp"
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="85dp"
                                android:src="@drawable/ic_mic"/>

                            <TextView
                                android:gravity="center"
                                android:layout_marginHorizontal="2dp"
                                android:layout_marginBottom="10dp"
                                android:text="음성제어"
                                android:textSize="10dp"
                                android:textColor="#000000"
                                android:layout_width="50dp"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/menu_sale_message"
                                android:gravity="center"
                                android:layout_marginHorizontal="2dp"
                                android:text="선풍기 전원"
                                android:textSize="10dp"
                                android:textColor="#828282"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />

                            <!--스위치 시작-->
                            <LinearLayout
                                android:id="@+id/fan_button"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginBottom="20dp"
                                android:orientation="horizontal">


                                <TextView
                                    android:id="@+id/fan_switch_on"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/item_switch_theme"
                                    android:padding="5dp"
                                    android:text="O N"
                                    android:textColor="#000000"
                                    android:textSize="15dp" />

                                <TextView
                                    android:id="@+id/fan_switch_off"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="#000000"
                                    android:padding="5dp"
                                    android:text="OFF"
                                    android:textColor="#ffffff"
                                    android:textSize="15dp" />

                            </LinearLayout>
                            <!--스위치 끝-->

                            <TextView
                                android:gravity="center"
                                android:layout_marginHorizontal="2dp"
                                android:text="가습기 전원"
                                android:textSize="10dp"
                                android:textColor="#828282"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />

                            <!--스위치 시작-->
                            <LinearLayout
                                android:id="@+id/humidifier_button"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/humidifier_switch_on"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/item_switch_theme"
                                    android:padding="5dp"
                                    android:text="O N"
                                    android:textColor="#000000"
                                    android:textSize="15dp" />

                                <TextView
                                    android:id="@+id/humidifier_switch_off"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="#000000"
                                    android:padding="5dp"
                                    android:text="OFF"
                                    android:textColor="#ffffff"
                                    android:textSize="15dp" />

                            </LinearLayout>
                            <!--스위치 끝-->

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>





            </LinearLayout>

            <!-- 인원수 카운트 제목-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_people" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="30dp"
                    android:text="사무실 입장 인원수"
                    android:textSize="25dp" />

                <ImageView
                    android:id="@+id/button_refresh_people_count"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_refresh" />

            </LinearLayout>

            <!-- 인원수 카운트 내용-->
            <LinearLayout
                android:paddingVertical="10dp"
                android:paddingHorizontal="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/item_content_area"
                android:orientation="vertical">

                <!--1사무실-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="현재 "
                        android:textColor="#000000"
                        android:textSize="25dp" />

                    <TextView
                        android:id="@+id/tv_people_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="00"
                        android:textColor="#000000"
                        android:textSize="25dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="명"
                        android:textColor="#000000"
                        android:textSize="25dp" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="자세한 내부 상황은\n실내 CCTV에서 확인하세요"
                    android:textColor="#828282"
                    android:textSize="20dp" />


            </LinearLayout>
            <!--인원수 카운트 끝-->


            <!-- 미세먼지 제목-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_dust" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="30dp"
                    android:text="사무실 주변 미세먼지"
                    android:textSize="25dp" />

                <ImageView
                    android:id="@+id/button_refresh_dust"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_refresh" />

            </LinearLayout>

            <!-- 미세먼지 내용-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/item_content_area"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:paddingHorizontal="15dp"
                        android:text="먼지 농도 (㎍/m³)"
                        android:textSize="18dp" />

                </LinearLayout>

                <!--1사무실-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_dust_concentration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:gravity="left"
                        android:paddingLeft="60dp"
                        android:text="0"
                        android:textColor="#000000"
                        android:textSize="25dp" />

                </LinearLayout>

            </LinearLayout>
            <!--미세먼지 끝-->

        </LinearLayout>

    </ScrollView>

    <FrameLayout
        android:visibility="gone"
        android:layout_gravity="center"
        android:id="@+id/mic_anim_area"
        android:background="#90000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.airbnb.lottie.LottieAnimationView
                android:layout_marginTop="100dp"
                android:id="@+id/lottieMicAnimView"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                app:lottie_loop="true" />

            <TextView
                android:text="듣고 있어요"
                android:textSize="22dp"
                android:gravity="center"
                android:textColor="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </FrameLayout>

</FrameLayout>


